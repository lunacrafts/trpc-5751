root = true

[*]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf
max_line_length = 120

[devops.config.ts, devops.gen.ts]
max_line_length = 150

[CHANGELOG.md]
indent_size = false

[*.{sol,yul}]
indent_style = space
indent_size = 2
max_line_length = 80

[*.{py}]
indent_style = space
indent_size = 4
